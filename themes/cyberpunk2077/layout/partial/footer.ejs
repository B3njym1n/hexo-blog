</footer>
<script>
    let lastScrollTop = 0;

    window.addEventListener('scroll', function() {
        const st = window.pageYOffset || document.documentElement.scrollTop; // Credits: "https://github.com/qeremy/so/blob/master/scroll.js"
        if (st > lastScrollTop) {
            // 向下滚动时背景向上移动
            document.body.style.backgroundPosition = 'center ' + (st * 1) + 'px';
        } else {
            // 向上滚动时背景向下移动
            document.body.style.backgroundPosition = 'center ' + (st * 1) + 'px';
        }
        lastScrollTop = st <= 0 ? 0 : st; // For Mobile or negative scrolling
    });
</script>